<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.loginyregistro.SignUpActivity">

    <EditText
        android:id="@+id/edt_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt_passw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_usuario"
        android:layout_alignStart="@+id/edt_usuario"
        android:layout_below="@+id/edt_usuario"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edt_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt_passw"
        android:layout_alignRight="@+id/edt_passw"
        android:layout_below="@+id/edt_passw"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_Registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_correo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Registrar" />
</RelativeLayout>
